/* Print page styles -- start*/
.print-page-wrap 
	*
		font-family: arial, helvetica, sans-serif ;
	.no-stories-message
		display none
.printMe
	.divider
		display none
	.invisible-divider
		display none
	.card-type-text
		font-weight bold
		display:inline-block;
		padding-bottom:10px;

.printWindow .individual-print-button
	display none
.printWindow .board-view, .printWindow .desk-view
	min-height inherit
	padding-bottom 0

.board-view, .desk-view
	position relative
.printWindow .left-column {
	border-right: solid 1px #999 !important;
}

.individual-print-button
	position: absolute;
	right: -35px;
	float: left;
	padding: 2px 15px;
	font-size: 25px;
	background: #f0f8ff;
	border-radius: 20px;
	margin: 0 10px;
	top: -12px;
	cursor: pointer
	color: #0b7ff
	&:hover
		color #fff
/* Print page styles -- end */

/* About page styles --- start */
.about-page
	clear both
	float left
	.contributions
		padding 10px 0
		.authors
			padding 20px 10px
			.author
				min-width 230px
				padding 10px 0
				float left
				.author-name
					font-weight bold
				.contribution-count
					padding 6px
					font-weight bold
					background #88c540
					color #fff
					border-radius 7px	
				img
					width 100px
	.message
		clear both
		padding 20px 0
		.issues
			padding 10px 0
			a
				text-decoration none
	.error
		padding 20px 0
		color red
/* About page styles --- end */



