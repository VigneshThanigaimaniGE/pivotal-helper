/* Login form styles -- start */
.dialog-wrap
	width:340px
	margin: 75px auto 0 auto;
	background: #e1e1e1
	padding: 10px
	border-radius: 5px
	box-shadow: 0 2px 2px rgba(0, 0, 0, 0.3)

.signin.inner
	padding: 0 5px

.signin.inner ul
	padding:0

.signin.inner li
	list-style-type:none
	padding:5px 0
.signin.inner li input[type="text"], .signin.inner li input[type="password"], .signin.inner li input[type="email"]
	width:100%
	font-size:16px
.signin.inner .submit.button
	width:100%
.signin.inner li.error-message 
	color:red;
/* Login form styles -- end */



/* Home page styles -- start */
.home 
	.title
		text-align center
		margin 60px 0 10px 0
.content-container
	margin 20px
.user-name
	padding:10px
	background:aliceblue
	font-weight:bold
	font-size:20px
	margin-bottom:20px
	border-radius: 8px
	.gravatar 
		margin-right:10px
	span
		position: relative;
		top: -5px;

	
.wrap
	margin:0 !important;
	a
		text-decoration:none;
		color:black;
	.card
		height: 130px;
		width: 250px;
		border-radius: 8px;
		float: left;
		margin-bottom: 20px;
		cursor: pointer;
		overflow: hidden;
		background-color: #fff;
		-webkit-transition: all 150ms ease-in;
		-moz-transition: all 150ms ease-in;
		-ms-transition: all 150ms ease-in;
		-o-transition: all 150ms ease-in;
		transition: all 150ms ease-in;
		.card-title
			padding:10px;
			color:#fff;
		&:active 
			box-shadow: none;
			position: relative;
			top: 2px;
			left: 2px;
			background-color: #fdfdfd;
			
		&:hover
			box-shadow: 0px 0px 3px 3px rgba(0,102,204,0.16);
		
		.card-inner-container 
			position: relative;
			height: 100%;
			padding:0 10px 10px;
			font-size:16px;

			.color-tag
				position:absolute
				bottom:0
				right:0
				width:25px
				height:25px
				border-radius:5px

.cards-container
	margin: 0 !important;
	width: 100%;
	float: left;
	
.default-shadow 
	-webkit-box-shadow: 0 0 3px 0px rgba(0,0,0,0.16);
	-moz-box-shadow: 0 0 3px 0px rgba(0,0,0,0.16);
	box-shadow: 0 0 3px 0px rgba(0,0,0,0.16);

.radius_06 
